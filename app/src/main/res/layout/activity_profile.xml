<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_orange"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:fontFamily="@font/notosanskr_bold"
                android:text="마이페이지"
                android:textColor="@color/white"
                android:textSize="23sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginRight="60px"
                android:src="@drawable/ic_search_btn"
                android:tint="@color/white"/>
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginRight="50px"
                android:src="@drawable/ic_notice_btn"
                android:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="@color/main_orange"
                android:gravity="center_vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/main_orange"
                    android:orientation="vertical"
                    android:layout_marginBottom="15px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100px"
                        android:fontFamily="@font/notosanskr_bold"
                        android:text="이름"
                        android:textSize="50px"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70px"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="메일"
                        android:textSize="35px"
                        android:layout_marginLeft="4px"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_btn"
                    android:tint="@color/white"
                    android:layout_marginRight="50px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:background="@drawable/round"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_marginTop="100px"
                android:layout_marginBottom="100px">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70px"
                        android:text="성공한 리스트"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textColor="#707070"
                        android:textSize="10sp"/>
                </LinearLayout>
                <View
                    android:layout_width="3px"
                    android:layout_height="230px"
                    android:background="#E2E2E2"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70px"
                        android:text="내 리스트"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textColor="#707070"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="140px"
                    android:text="계정 관리"
                    android:fontFamily="@font/notosanskr_light"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_btn"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#F1F1F1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="140px"
                    android:text="테마 편집"
                    android:fontFamily="@font/notosanskr_light"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_btn"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#F1F1F1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="140px"
                    android:text="임시 저장 내역"
                    android:fontFamily="@font/notosanskr_light"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_btn"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:background="#F1F1F1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="140px"
                    android:text="푸시 알림 설정"
                    android:fontFamily="@font/notosanskr_light"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_btn"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#F1F1F1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="140px"
                    android:text="이용 안내"
                    android:fontFamily="@font/notosanskr_light"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_btn"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:background="#F1F1F1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="140px"
                    android:text="버전 정보"
                    android:fontFamily="@font/notosanskr_light"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_btn"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:background="@color/white"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/ic_select_tab_home"
                android:tint="#B8B8B8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/ic_select_tab_users"
                android:tint="#B8B8B8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/ic_select_tab_bucket"
                android:tint="#B8B8B8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/ic_select_tab_setting"
                android:tint="@color/main_orange"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>