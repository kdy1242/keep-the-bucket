<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="190dp"
    android:background="@drawable/round_bingo"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/add_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_add_img_btn" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/add_img_btn"
        app:layout_constraintStart_toEndOf="@id/add_img_btn"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/roboto_light"
        android:textSize="10sp"
        android:text="Enter the title" />

    <EditText
        android:id="@+id/title_edtxt"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_txt"
        app:layout_constraintStart_toStartOf="@id/title_txt"
        android:backgroundTint="@color/main_orange"
        android:padding="6dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_edtxt"
        app:layout_constraintStart_toEndOf="@id/add_img_btn"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/roboto_light"
        android:textSize="10sp"
        android:text="Date" />

    <EditText
        android:id="@+id/date_edtxt"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_orange"
        android:fontFamily="@font/notosanskr_regular"
        android:hint="ex) 2022-06-12"
        android:includeFontPadding="false"
        android:padding="6dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/date_txt"
        app:layout_constraintTop_toBottomOf="@id/date_txt" />

    <TextView
        android:id="@+id/cancel_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_edtxt"
        app:layout_constraintStart_toStartOf="@id/date_edtxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:padding="10dp"
        android:text="CANCEL" />

    <TextView
        android:id="@+id/ok_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_edtxt"
        app:layout_constraintStart_toEndOf="@id/cancel_txt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:padding="10dp"
        android:textColor="@color/main_orange"
        android:text="OK" />



</androidx.constraintlayout.widget.ConstraintLayout>