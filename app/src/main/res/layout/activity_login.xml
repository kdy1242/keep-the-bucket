<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/white"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_back_btn" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="16dp"
        android:includeFontPadding="false"
        android:text="환영합니다!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="로그인을 해주세요"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_regular"/>
    <EditText
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:hint="이메일 주소 또는 아이디"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/login_btn_round"
        android:fontFamily="@font/notosanskr_regular"/>
    <FrameLayout
        android:layout_width="328dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:textSize="14sp"
            android:hint="패스워드"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:background="@drawable/login_btn_round"
            android:fontFamily="@font/notosanskr_regular"/>
        <Button
            android:layout_width="36dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:background="#00ff0000"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:layout_marginTop="16dp"
            android:text="SHOW"
            android:textColor="@color/main_orange"
            android:textSize="12sp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:buttonTint="@color/main_orange"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="로그인 상태 유지"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="#605F5F" />
    </LinearLayout>
    <Button
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/login_btn_round"
        android:text="로그인"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="#E2E2E2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아이디 찾기"
            android:textSize="12sp"
            android:gravity="right|center_vertical"
            android:fontFamily="@font/notosanskr_regular"
            android:background="@drawable/background_transparent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="|"
            android:textSize="16sp"
            android:gravity="right|center_horizontal"
            android:layout_marginRight="5.4sp"
            android:textColor="#DDDDDD"
            android:background="@drawable/background_transparent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="비밀번호 찾기"
            android:textSize="12sp"
            android:fontFamily="@font/notosanskr_regular"
            android:background="@drawable/background_transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="|"
            android:textSize="16sp"
            android:textColor="#DDDDDD"
            android:gravity="left|center_horizontal"
            android:layout_marginLeft="5.4sp"
            android:background="@drawable/background_transparent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원가입"
            android:textSize="12sp"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/notosanskr_regular"
            android:background="@drawable/background_transparent"/>

    </LinearLayout>
</LinearLayout>